{
  "tournament": {
    "name": "Billion Row Challenge Tournament",
    "version": "1.0.0",
    "description": "Competitive programming tournament for optimizing billion-row data processing",
    "start_date": "2024-01-01",
    "end_date": "2024-12-31",
    "status": "active"
  },
  "challenge": {
    "data_file": "data/measurements.txt",
    "expected_format": "{station}={min}/{mean}/{max}",
    "sorting": "alphabetical",
    "time_limit_minutes": 30,
    "memory_limit_gb": 8,
    "output_validation": true
  },
  "languages": {
    "java": {
      "enabled": true,
      "version": "17",
      "compiler": "javac",
      "runner": "java",
      "timeout_multiplier": 1.0,
      "docker_image": "openjdk:17-jdk-slim"
    },
    "python": {
      "enabled": true,
      "version": "3.11",
      "compiler": null,
      "runner": "python3",
      "timeout_multiplier": 1.0,
      "docker_image": "python:3.11-slim"
    },
    "cpp": {
      "enabled": true,
      "version": "20",
      "compiler": "g++",
      "runner": null,
      "timeout_multiplier": 0.8,
      "docker_image": "gcc:12"
    },
    "go": {
      "enabled": true,
      "version": "1.21",
      "compiler": null,
      "runner": "go run",
      "timeout_multiplier": 0.9,
      "docker_image": "golang:1.21-alpine"
    }
  },
  "scoring": {
    "primary_metric": "execution_time",
    "secondary_metrics": ["memory_usage", "cpu_usage"],
    "penalties": {
      "timeout": 999999,
      "memory_exceeded": 999999,
      "wrong_output": 999999,
      "compilation_error": 999999
    },
    "bonuses": {
      "first_submission": 0,
      "documentation": 0.95,
      "clean_code": 0.98
    }
  },
  "github": {
    "runner_labels": ["billion-rows", "linux", "amd64"],
    "auto_comment": true,
    "pr_checks": ["compilation", "execution", "validation"],
    "required_checks": ["compilation", "execution"]
  },
  "leaderboard": {
    "update_frequency_minutes": 5,
    "max_entries": 100,
    "group_by_language": true,
    "show_details": true,
    "cache_duration_minutes": 10
  },
  "monitoring": {
    "enabled": true,
    "metrics": ["execution_time", "memory_usage", "cpu_usage", "disk_io"],
    "alerts": {
      "high_memory": 7.0,
      "long_execution": 25,
      "runner_offline": true
    }
  },
  "security": {
    "sandbox": true,
    "network_access": false,
    "file_access": ["data/", "submissions/"],
    "max_processes": 1,
    "max_threads": 16
  }
}


